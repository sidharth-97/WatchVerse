<%- include("../layouts/header.ejs") -%>
<%- include("./headerDashboard.ejs") -%>
<section>
    <div class="col-lg-12">
        <div><a class="btn btn-outline-dark" href="/admin/coupons/add-coupons" role="button">Add new Coupon</a></div>
        <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Expiry Date</th>
                <th scope="col">Discount</th>
                <th scope="col">Minimum Amount</th>
                <th scope="col">isActive</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
               
        <% if (coupons.length > 0) {
            for (let i = 0; i < coupons.length; i++) { %>
                <tr>
                    <td><%= coupons[i].name %></td>
                    <td><%= coupons[i].description %></td>
                    <td><%= coupons[i].expiry_date %></td>
                    <td><%= coupons[i].discount %></td>
                    <td><%= coupons[i].min_amt %></td> 
                    <td><%= coupons[i].isActive %></td>
                  <td>
                    <% if(coupons[i].isActive){ %>
                        <a class="btn btn-primary" href="/admin/coupons/status?id=<%= coupons[i]._id %>" role="button">Unlist</a>
                   <% }else{ %>
                        <a class="btn btn-primary" href="/admin/coupons/status?id=<%= coupons[i]._id %>" role="button">List</a>

                  <% } %>           
                  </td>
                  
                    <td><a href="/admin/coupons/edit-coupons?id=<%= coupons[i]._id %>">Edit</a></td>               
                </tr>
            <% }
        } %>
            </tbody>
          </table>
    </div>
</section>

<%- include("./footerDashboard.ejs") -%>
<%- include("../layouts/header.ejs") -%>
<%- include("./headerDashboard.ejs") -%>
<section>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

  <!-- Custom CSS -->
  <style>
    body {
      background-color: #f8f9fa;
    }

    .banner-section {
      margin-bottom: 30px;
    }
  </style>

  <body>
    <div class="container">
      <div class="row justify-content-center flex-column">
        <div class="col-md-12">
          <div class="card banner-section">
            <div class="card-header">
              <h2 class="banner-title">Banner 1</h2>
            </div>
            <div class="card-body">
              <form action="/admin/banner" method="post" enctype="multipart/form-data">
                <input type="hidden" name="bannerNumber" value="1">
                <div class="form-group">
                  <label for="bannerImage1">Banner Image</label>
                  <br>
                  <img src="/website/<%= banner[0].image %>" class="img-fluid" alt="no banner set">
                  <input type="file" class="form-control-file mt-3" id="bannerImage1" name="bannerImage" accept="image/*" required>
                </div>
                <div class="form-group">
                  <label for="bannerURL1">Banner URL</label>
                  <input type="text" class="form-control" id="bannerURL1" value="<%= banner[0].link %>" name="bannerURL" placeholder="NO BANNER " required>
                </div>
                <button type="submit" class="btn btn-primary">Add Banner</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="card banner-section">
            <div class="card-header">
              <h2 class="banner-title">Banner 2</h2>
            </div>
            <div class="card-body">
              <form action="/admin/banner" method="post" enctype="multipart/form-data">
                <!-- Add a hidden input field to specify the banner number -->
                <input type="hidden" name="bannerNumber" value="2">
                <div class="form-group">
                  <label for="bannerImage2">Banner Image</label>
                  <br>
                  <img src="/website/<%= banner[1].image %>" class="img-fluid" alt="no banner set">
                  <input type="file" class="form-control-file mt-3" id="bannerImage2" name="bannerImage" accept="image/*" required>
                </div>
                <div class="form-group">
                  <label for="bannerURL2">Banner URL</label>
                  <input type="text" class="form-control" id="bannerURL2" value="<%= banner[1].link %>" name="bannerURL" placeholder="NO BANNER" required>
                </div>
                <button type="submit" class="btn btn-primary">Add Banner</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include("./footerDashboard.ejs") -%>
    <!-- Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"
      integrity="sha384-ZosMFL/lFT/p8yI+qA+o0lvvhMEylvoz2RO9bc1/7LlByhY5LdKUw3pwYyqkFstD"
      crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+Wyjs5S1aFEEpEM8IVf66cU5w/YA4Mk1gW1"
      crossorigin="anonymous"></script>

</section>



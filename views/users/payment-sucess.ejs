<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>WatchVerse</title>
  <link rel="icon" href="/website/logo.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <style>
    video {
      max-width: 100%;
      height: auto;
      cursor: pointer;
      outline: none;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }
  </style>
</head>
<%- include('../layouts/navbar.ejs') -%>

<body>
  <div class="d-flex justify-content-center align-items-center flex-column" style="height: 100vh;">
    <div>
      <h3>Your Order has been placed successfully</h3>
    </div>
    <div class="mb-4">
      <video id="videoPlayer" autoplay muted poster="/path-to-video-thumbnail.jpg">
       
        <source src="/website/WhatsApp Video 2023-07-29 at 8.57.10 AM.mp4" type="video/mp4">
    
        Your browser does not support the video tag.
      </video>
    </div>
  
    <div>
      <a href="/watches" class="btn btn-success">Back to Shopping</a>
    </div>   
  </div>

  <script>
    const videoPlayer = document.getElementById("videoPlayer");

    videoPlayer.play();

    videoPlayer.addEventListener("ended", function() {
      videoPlayer.pause();
    });
  </script>
</body>
</html>
